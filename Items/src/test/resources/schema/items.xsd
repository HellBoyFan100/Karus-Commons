<xs:schema version="1.0" xmlns:xs="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
    
    <xs:include schemaLocation = "./meta/banner-meta.xsd"/>
    <xs:include schemaLocation = "./meta/book-meta.xsd"/>
    <xs:include schemaLocation = "./meta/item-meta.xsd"/>
    <xs:include schemaLocation = "./meta/leather-armor-meta.xsd"/>
    <xs:include schemaLocation = "./meta/potion-meta.xsd"/>
    <xs:include schemaLocation = "./meta/storage-meta.xsd"/>
    
    <xs:element name = "items">
        <xs:complexType>
            <xs:sequence>
                <xs:element name = "item" minOccurs = "1" maxOccurs = "unbounded">
                    <xs:complexType>
                        <xs:sequence>
                            
                            <xs:element name = "value" minOccurs = "0" maxOccurs = "1">
                                <xs:complexType>
                                    <xs:attribute name = "buy" type = "xs:float" default = "0"/>
                                    <xs:attribute name = "sell" type = "xs:float" default = "0"/>
                                </xs:complexType>
                            </xs:element>
                            
                            <xs:choice>
                                <xs:element name = "banner-meta" type = "bannerType"/>
                                <xs:element name = "book-meta" type = "bookType"/>
                                <xs:element name = "item-meta" type = "itemType"/>
                                <xs:element name = "leather-armour-meta" type = "leatherArmorType"/>
                                <xs:element name = "potion-meta" type = "potionMeta"/>
                                <xs:element name = "storageMeta" type = "storageMeta"/>
                            </xs:choice>
                            
                        </xs:sequence>
                        
                        <xs:attribute name = "name" type = "xs:string" use = "required"/>
                        <xs:attribute name = "type" type = "xs:string" use = "required"/>
                        <xs:attribute name = "amount" type = "xs:positiveInteger" default = "1"/>
                        <xs:attribute name = "data" type = "xs:short" default = "0"/>
                        
                    </xs:complexType>
                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

</xs:schema>
